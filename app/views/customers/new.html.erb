<h1>Registrar novo cliente</h1>
<% @customer.errors.full_messages.each do |message| %>
  <p><%= message %></p>
<%end%>
<%= form_with model: @customer, local: true do |c|%>
  <%= c.label :name, 'Nome' %>
  <%= c.text_field :name %>
  <%= c.label :document, 'CPF' %>
  <%= c.text_field :document %>
  <%= c.label :email, 'Email' %>
  <%= c.text_field :email %>
  <%= c.submit 'Enviar' %>
<%end%>