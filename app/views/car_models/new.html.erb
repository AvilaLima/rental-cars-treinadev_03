<h1>Novo modelo de carro</h1>
<% if @car_model.errors.any? %>
  <ul>
    <% @car_model.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @car_model do |f| %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.label :year, 'Ano' %>
  <%= f.number_field :year , value: Time.zone.now.year %>
  <%= f.label :motorization, 'Motor' %>
  <%= f.text_field :motorization %>
  <%= f.label :fuel_type, 'CombustÃ­vel' %>
  <%= f.text_field :fuel_type %> 
  <%= f.label :manufacturer_id, 'Fabricante' %>
  <%= f.collection_select :manufacturer_id, @manufacturers, :id, :name%>
  <%= f.label :carcategory_id, 'Categoria de Carro' %>
  <%= f.collection_select :carcategory_id, Carcategory.all, :id, :name%>
  <%= f.submit 'Enviar' %>
<% end %>